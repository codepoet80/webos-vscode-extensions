{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "palm-run",
            "type": "shell",
            "command": "palm-run",
            "args": ["${workspaceFolder}"],
            "windows": {
                "command": "palm-run",
                "args": ["${workspaceFolder}"]
            },
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "palm-build",
            "type": "shell",
            "command": "palm-package",
            "args": ["${workspaceFolder}", "-o", "${workspaceFolder}/_bin"],
            "windows": {
                "command": "palm-package",
                "args": ["${workspaceFolder}", "-o", "${workspaceFolder}/_bin"],
            },
            "problemMatcher": [],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "palm-log level: info",
            "type": "shell",
            "command": "palm-log",
            "args": ["--system-log-level", "info"],
            "windows": {
                "command": "palm-log",
                "args": ["--system-log-level", "info"]
            },
            "problemMatcher": [],
            "group": "none",
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "palm-log level: warn",
            "type": "shell",
            "command": "palm-log",
            "args": ["--system-log-level", "warn"],
            "windows": {
                "command": "palm-log",
                "args": ["--system-log-level", "warn"]
            },
            "problemMatcher": [],
            "group": "none",
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "palm-log level: error",
            "type": "shell",
            "command": "palm-log",
            "args": ["--system-log-level", "error"],
            "windows": {
                "command": "palm-log",
                "args": ["--system-log-level", "error"]
            },
            "problemMatcher": [],
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "nova-browser",
            "type": "shell",
            "command": "/opt/PalmPDK/bin/nova-browser",
            "windows": {
                "command": "java",
                "args": ["-jar", "C:\\Program Files (x86)\\HP webOS\\PDK\\share\\jars\\DeviceBrowser.jar"]
            },
            "problemMatcher": [],
            "group": "none",
            "presentation": {
                "reveal": "never",
                "panel": "dedicated"
            }
        },
        {
            "label": "nova-term",
            "type": "shell",
            "command": "/opt/nova/bin/novaterm",
            "windows": {
                "command": "C:\\Program Files (x86)\\HP webOS\\SDK\\bin\\novacom.exe",
                "args": ["-t", "open", "tty://"]
            },
            "problemMatcher": [],
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        }
    ]
}